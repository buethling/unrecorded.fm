    <div id="app">

      <div class='player'>
        <div id="apiswf"></div>

        <div class="player_face">

          <header class='player_header'>
            <h2 class="song_title"></h2>
          </header>

          <article class='album'>
            <img class='cover' alt="Album art for current track" height="200" width="200" src="http://www.loremipsum.net/pixelgif/pics/pixel.gif">
          </article>

          <input type="text" class="play_key" value="a105771">

          <footer class='player_footer'>
            <div class="player_controls">
              <a class="search iconic magnifying_glass"></a>
              <a class="play iconic"></a>
              <a class="next iconic last"></a>
              <a class="vol iconic volume"></a>
            </div>
          </footer>
        </div>
        
        <div class='player_shade'></div>
      </div>

      <footer id="main_footer">
        <h1 id="logo">unrecorded.fm</h1>
        powered by <a href="http://rdio.com">RdioÂ®</a>
